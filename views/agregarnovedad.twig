{% extends "template/base.twig" %}
{% block content %}
<div class="row">
        <div class="col-lg-8 mb-4">
          <h3>Agregar Novedades para APP @Medell√≠n</h3>
          <br>
          <form name="sentMessage" id="contactForm" novalidate>
          <div class="control-group form-group">
              <div class="controls">
                <label>Fecha:</label>
                <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
                <p class="help-block"></p>
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <label>Titulo:</label>
                <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
                <p class="help-block"></p>
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <label>resumen:</label>
                <input type="tel" class="form-control" id="email" required data-validation-required-message="Please enter your phone number.">
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <label>Link:</label>
                <input type="tel" class="form-control" id="url" required data-validation-required-message="Please enter your phone number.">
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <div class="form-group">
                    <label>Tipo novedad</label>
                        <select class="form-control">
                            <option>Primaria</option>
                            <option>Normal</option>
                        </select>
                </div>
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <label>Contenido:</label>
                <textarea rows="10" cols="1000" class="form-control" id="message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
              </div>
            </div>
            <div class="control-group form-group">
            <div class="form-group">
                <label>Cargar imagen</label>
                    <input type="file">
             </div>
            </div>
            <div id="success"></div>
            <!-- For success/fail messages -->
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Guardar</button>
          </form>
        </div>

      </div>
{% endblock %}