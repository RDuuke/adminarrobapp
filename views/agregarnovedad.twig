{% extends "template/base.twig" %}
{% block content %}
<div class="row">
        <div class="col-lg-8 mb-4">
          <h3>Agregar Novedades para APP @Medell√≠n</h3>
          <br>
          <form action="{{ path_for('novedad.insertar') }}"  method="post" enctype="multipart/form-data">
            <div class="control-group form-group">
              <div class="controls">
                <label>Titulo:</label>
                <input type="text" class="form-control" name="titulo" id="name" />
                <p class="help-block"></p>
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <label>resumen:</label>
                <input type="tel" class="form-control" name="resumen" id="email" maxlength="100" placeholder="100 caracteres" />
              </div>
            </div> 
            <div class="control-group form-group">
              <div class="controls">
                <label>Link:</label>
                <input type="tel" class="form-control" name="link" id="url" />
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <div class="form-group">
                    <label>Tipo novedad</label>
                        <select class="form-control" name="tipo_novedad">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                </div>
              </div>
            </div>
            <div class="control-group form-group">
              <div class="controls">
                <label>Contenido:</label>
                <textarea  name="contenido" rows="10" cols="1000" class="form-control" id="message" maxlength="9999" style="resize:none"></textarea>
              </div>
            </div>
            <div class="form-group">
            <input type="file" name="imagen" id="imagen" />
            </div>
            <div id="success"></div>
            <!-- For success/fail messages -->
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Guardar</button>
          </form>
        </div>

      </div>
{% endblock %}